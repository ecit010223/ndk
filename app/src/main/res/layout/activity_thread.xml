<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_thread_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/thread_count"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_thread_iteration_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/iteration_count"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_thread_start"
        style="@style/ViewNormal"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_normal"
        android:layout_height="@dimen/view_height_normal"
        android:text="@string/start_threads" />

    <ScrollView
        android:id="@+id/sv_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_thread_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>